<settings xmlns="http://www.w3schools.com/3DCursor"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://www.w3schools.com/3DCursor xml/settings_schema.xsd">
    <global onscreen="yes"
            preview="no"
            soundEnabled="yes"/>
    <theme name="Red Dot"
           cursorType="laser"
           description="Defines a red laser dot with animations"
           id="red_dot">
        <asset action="default"
               soundEnabled="no"
               src="my_cursor_default.png"
               type="2D"
               x="0.1"
               y="0.1"/>
        <asset action="click"
               soundEnabled="yes"
               soundSrc="click_a.mp3"
               src="my_cursor_action.png"
               type="2D"
               x="0.1"
               y="0.1"/>
        <asset action="loading"
               animated="yes"
               duration="1.0"
               soundEnabled="no"
               src="my_cursor_loading.zip"
               type="2D"
               x="0.1"
               y="0.1"/>
        <asset action="hover"
               animated="yes"
               duration="1.0"
               soundEnabled="no"
               src="my_cursor_hover.zip"
               type="2D"
               x="0.1"
               y="0.1"/>
    </theme>

    <cursor name="Laser Cursor"
            active="yes"
            position="center"
            themeId="red_dot"
            type="laser">
        <io deviceId="gearvr"
            priority="1"
            productId="42240"
            vendorId="1256"/>
    </cursor>

</settings>
